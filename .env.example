# Database URL (for local development, use a local PostgreSQL instance or SQLite)
# For Render, this will be provided by Render's PostgreSQL service
DATABASE_URL="postgresql://user:password@host:port/dbname"

# Flask Secret Key (generate a random string)
SECRET_KEY="a_very_secret_random_string_please_change_me"

# Google OAuth Credentials (get these from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your_google_client_secret"

# Base URL for your application (used for OAuth redirect URIs sometimes)
# For local development:
FLASK_BASE_URL="http://127.0.0.1:5000"
# For production on Render (replace with your actual Render app URL):
# FLASK_BASE_URL="https://your-app-name.onrender.com"
